<h1>Fish</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fish.each do |fish| %>
      <tr>
        <td><%= fish.name %></td>
        <td><%= fish.user.email %></td>
        <td><%= link_to 'Show', fish %></td>
        <% if is_admin %>
        <td><%= link_to 'Edit', edit_fish_path(fish) %></td>
        <td><%= link_to 'Destroy', fish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if is_admin %>
<%= link_to 'New Fish', new_fish_path, class: 'btn btn-default' %>
<% end %>
